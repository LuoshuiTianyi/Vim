" |- Template
  " |- cpp
    autocmd BufNewFile *.cpp :0r ~/Template/template.cpp
  " |- check.sh
    autocmd BufNewFile check.sh :0r ~/Template/template_check.sh
" |- Auto change work dir
  autocmd BufEnter * cd %:p:h
" |- Enable the Format for c
  autocmd FileType c ClangFormatAutoEnable
" |- turn off the error flashing
  autocmd GuiEnter * set t_vb=
" |- set default cursor shape as block
  autocmd VimEnter * silent !echo -ne "\e[1 q"
