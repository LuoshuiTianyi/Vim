func SmoothScroll(up)
  if a:up == 0
    let scrollaction="\<c-y>"
  else
    let scrollaction="\<c-e>"
  endif
  exec "normal " . scrollaction
  redraw
  let counter = 1
  if a:up == 3 || a:up == 4
    let lim = 20
  else
    let lim = 10
  while counter < lim
    let counter += 1
    sleep 10m
    redraw
    exec "normal " . scrollaction
  endwhile
endfunc

func! CompareRun()
  exec "w"
  if (&filetype == 'cpp')
    exec 'make'
    exec 'cw'
    exec '!time ./%<'
  elseif (&filetype == 'tex')
    exec '!xelatex ./%'
  elseif (&filetype == 'sh')
    exec '!chmod +x ./%'
    exec '!bash ./%'
  elseif (&filetype == 'python')
    exec '!python3 ./%'
  endif
endfunc                  " 编译运行
